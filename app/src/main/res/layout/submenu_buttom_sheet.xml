<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_dialogue"

    >
    <!--    style="@style/AppBottomSheetDialogTheme"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"

        >

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/itemImage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="20dp"
                android:layout_height="0dp"
                ></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cat"
                    android:layout_width="13dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/veg"></Button>
                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp">

                </View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/itemName"
                        android:text="******"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    </TextView>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp">

                    </View>

                    <TextView
                        android:id="@+id/itemPrice"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:text="â‚¹ 00"
                        android:textColor="#3949AB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"></View>
            <ProgressBar
                android:id="@+id/progressDialogue"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                style="@style/Widget.AppCompat.ProgressBar"
                android:indeterminateTint="@color/colorAccent"
                android:indeterminate="true"
                android:max="100"
                android:progress="10"
                android:layout_marginTop="-20dp"
                android:secondaryProgress="25"></ProgressBar>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

            <Button
                android:id="@+id/close"
                android:layout_gravity="top"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_close_black">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyCart"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/subMenuLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/msgText"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"
                    android:text="Choice of Size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </TextView>
                <TextView
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:text="Required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="5dp"
                    android:id="@+id/submenuList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"

                >

                <TextView
                    android:id="@+id/addToCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLight"
                    android:gravity="center"
                    android:enabled="false"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/add_to_cart_disables"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textAllCaps="true"
                    android:text="add"
                    android:foreground="?android:attr/selectableItemBackground"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemsInCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemsInCart">
            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="40dp"
                android:padding="5dp"
                android:id="@+id/addMore"
                android:foreground="?selectableItemBackground"
                android:textColor="@color/colorAccent"
                android:background="?selectableItemBackground"
                android:text=" + ADD MORE OPTIONS"></Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

